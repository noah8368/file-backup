{
  "name": "file-backup",
  "displayName": "File Backup",
  "description": "Allows a user to back up files from a project to a remote host machine.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-backup.backup",
        "title": "Backup files"
      }
    ],
    "configuration": {
      "title": "file-backup",
      "properties": {
        "file-backup.remote-host-ip": {
          "type": "string",
          "default": "localhost",
          "description": "IP of remote backup host."
        },
        "file-backup.remote-host-save-dir": {
          "type": "string",
          "description": "File path on remote host to save files to."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}